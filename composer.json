{
  "name": "vs-point/messenger-transport-mqtt",
  "type": "library",
  "description": "Symfony Messenger transport for the MQTT.",
  "license": [
    "MIT"
  ],
  "keywords" : [
    "mqtt",
    "symfony",
    "messenger",
    "component",
    "symfony-messenger"
  ],
  "homepage" : "https://github.com/vs-point/messenger-transport-mqtt",
  "authors" : [
    {
      "name" : "Vít Steklý",
      "email" : "stekly.vit@vs-point.cz",
      "homepage" : "https://www.vs-point.cz"
    }
  ],
  "require": {
    "ext-mosquitto": "*",
    "php": "~7.1",
    "symfony/messenger": "~4.1"
  },
  "require-dev": {
    "ext-intl": "*"
  },
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "VSPoint\\Messenger\\Transport\\": [
        "src/"
      ]
    }
  },
  "autoload-dev": {
    "classmap": [
      "tests"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
